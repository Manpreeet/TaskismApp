<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/listLV"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
   android:background="@null"
    android:orientation="vertical" >

  

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
                 android:background="@drawable/main_bg"
            android:scrollbars="none" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <RelativeLayout
                    android:id="@+id/menu"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="top"
                    android:gravity="center" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:paddingLeft="10dip"
                        android:text="Menu"
                        android:textColor="#fff"
                        android:textSize="18sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rel_home1"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:background="@null"
                    android:layout_gravity="top"
                    android:gravity="left" >

                    <TextView
                        android:id="@+id/tv_home"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/imageView1"
                        android:paddingLeft="10dip"
                        android:text="HOme"
                        android:textColor="#fff"
                        android:textSize="12sp" />

                    <ImageView
                        android:id="@+id/imageView1"
                        android:layout_width="35dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:contentDescription="@null"
                        android:src="@drawable/ic_launcher" />
                </RelativeLayout>

                <View
                    android:id="@+id/view_home"
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="0dp"
                    android:background="#fff" />

                <RelativeLayout
                    android:id="@+id/rel_share"
                    android:layout_width="fill_parent"
                    android:background="@null"
                    android:layout_height="40dp" >

                    <TextView
                        android:id="@+id/tv_share"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/shareIcon"
                        android:paddingLeft="10dip"
                        android:text="Home"
                        android:textColor="#fff"
                        android:textSize="12sp" />

                    <ImageView
                        android:id="@+id/shareIcon"
                        android:layout_width="35dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:contentDescription="@null"
                        android:src="@drawable/ic_launcher" />

                </RelativeLayout>

                <View
                    android:id="@+id/view_share"
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="0dp"
                    android:background="#fff" />

                <RelativeLayout
                    android:id="@+id/rel_history"
                    android:layout_width="fill_parent"
                    android:background="@null"
                    android:layout_height="40dp" >

                    <TextView
                        android:id="@+id/tv_history"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/imageView4"
                        android:paddingLeft="10dip"
                        android:text="History"
                        android:textColor="#fff"
                        android:textSize="12sp" />

                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="35dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:contentDescription="@null"
                        android:src="@drawable/ic_launcher" />

                </RelativeLayout>

                <View
                    android:id="@+id/view_history"
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="0dp"
                    android:background="#fff" />

                <RelativeLayout
                    android:id="@+id/rel_trip_search"
                    android:layout_width="fill_parent"
                    android:background="@null"
                    android:layout_height="40dp" >

                    <TextView
                        android:id="@+id/tv_trip_search"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/imageView2"
                        android:paddingLeft="10dip"
                        android:text="Trip Search"
                        android:textColor="#fff"
                        android:textSize="12sp" />

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="35dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:contentDescription="@null"
                        android:src="@drawable/ic_launcher" />

                </RelativeLayout>

                <View
                    android:id="@+id/view_trip_search"
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="0dp"
                    android:background="#fff" />

                <RelativeLayout
                    android:id="@+id/rel_settings"
                    android:layout_width="fill_parent"
                    android:background="@null"
                    android:layout_height="40dp" >

                    <TextView
                        android:id="@+id/tv_settings"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/imageView3"
                        android:paddingLeft="10dip"
                        android:text="Settings"
                        android:textColor="#fff"
                        android:textSize="12sp" />

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="35dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:contentDescription="@null"
                        android:src="@drawable/ic_launcher" />

                </RelativeLayout>

                <View
                    android:id="@+id/view_settings"
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="#fff" />

                

                               
                
            </LinearLayout>
        </ScrollView>
</LinearLayout>
