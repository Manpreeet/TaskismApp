            android:name=".LoginActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.task.taskApplication.RegistrationActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.task.taskApplication.ForgetPasswordActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.task.taskApplication.UsersScheduleTaskActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.task.taskApplication.CommentActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.task.taskApplication.MyProfileActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.task.taskApplication.UserListActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.task.taskApplication.EditUserActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.task.taskApplication.MyScheduleTaskActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.task.taskApplication.EditRoleActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.task.taskApplication.EditTaskActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.task.taskApplication.EditScheduleActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.task.taskApplication.TutorialActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.task.taskApplication.ViewScheduleActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>